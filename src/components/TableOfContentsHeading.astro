---
const { heading } = Astro.props;
---

<li class={heading.depth >= 2 ? "mt-1" : "mt-4"}>
	<a
		href={`#${heading.slug || heading.id}`}
		class={"underline underline-offset-2 decoration-primary-700 decoration-2 hover:text-black dark:hover:text-white" +
			(heading.depth >= 2
				? heading.depth >= 3
					? " font-light"
					: ""
				: " text-xl font-semibold")}
	>
		{heading.text}
	</a>
	{
		heading.subheadings.length > 0 && (
			<ul class={heading.depth > 1 ? "ml-6" : "mt-2"}>
				{heading.subheadings.map((subheading: any) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>
