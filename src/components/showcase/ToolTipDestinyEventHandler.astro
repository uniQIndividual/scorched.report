<script>
	const hud = document.getElementsByClassName("destiny-tooltip");

	document.addEventListener("mousemove", (event) => {
		if (!hud || window.innerWidth < 1024) {
			return;
		}

		const mouseX = event.clientX;
		const mouseY = event.clientY;
		const screenX = window.innerWidth;
		const screenY = window.innerHeight;

		for (const el in hud) {
			if (Object.prototype.hasOwnProperty.call(hud, el)) {
				const el_width = hud[el]?.offsetWidth;
				const el_height = hud[el]?.offsetHeight;

				if (
					!hud[el] ||
					!hud[el].style ||
					el_width == 0 ||
					el_height == 0 ||
					!hud[el].checkVisibility({ visibilityProperty: true })
				) {
					// ignore invisible tooltips
				} else {
					hud[el].style.left =
						(mouseX > screenX - (el_width + 32) ? mouseX - (el_width + 40) : mouseX) + "px";
					hud[el].style.top =
						(mouseY > screenY - (el_height + 32) ? mouseY - (el_height + 40) : mouseY) + "px";
				}
			}
		}
	});
</script>
