				animation-delay: 4s;
			}
			.flame-main.five {
				animation-duration: 2.5s;
				animation-delay: 5s;
			}
			@keyframes flameMovement {
				50% {
					transform: scale(0.98, 1) translate(0, 2px) rotate(-1deg);
				}
			}
			@keyframes flameDisappear {
				0% {
					transform: translate(0) rotate(180deg);
				}
				50% {
