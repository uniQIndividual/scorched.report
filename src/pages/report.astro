---
import LayoutSidebar from "../app/LayoutSidebar.astro";
import ReportLookup from "../modules/ReportLookup.tsx";
---

<LayoutSidebar
	title="Scorcher Lookup"
	og_title="Scorcher Lookup"
	og_description="Look up your Team Scorched stats and your previous matches."
>
	<ReportLookup client:only="react" />
</LayoutSidebar>
<style is:global>
	/* chart styles */
	.apexcharts-legend-text {
		@apply text-gray-900 dark:text-white !important;
	}
	.apexcharts-tooltip {
		@apply bg-white dark:bg-gray-700 text-gray-500 dark:text-gray-300 border-0 rounded-lg shadow-lg !important;
	}

	.apexcharts-tooltip .apexcharts-tooltip-title {
		@apply py-2 px-4 bg-gray-100 dark:bg-gray-600 border-b border-gray-200 dark:border-gray-500 !important;
	}

	.apexcharts-xaxistooltip,
	.apexcharts-yaxistooltip {
		@apply text-gray-500 border-0 bg-white dark:bg-gray-700 dark:text-gray-200 rounded-lg shadow-lg !important;
	}

	.apexcharts-tooltip,
	.apexcharts-tooltip-text-y-value,
	.apexcharts-tooltip-text-x-value {
		@apply dark:text-white;
	}

	.apexcharts-xaxistooltip-text {
		@apply font-medium text-sm !important;
	}

	.apexcharts-xaxistooltip:before,
	.apexcharts-xaxistooltip:after {
		@apply border-0 !important;
	}
</style>
