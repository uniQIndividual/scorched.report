---
import LayoutSidebar from "../../app/LayoutSidebar.astro";
import { MapDistribution } from "../../components/science/MapDistribution.tsx";
import MapDistributionMd from "../../components/science/MapDistribution.md";
import MarkdownWrapper from "../../app/MarkdownWrapper.astro";
import metadata from "../../assets/metadata.json";
---

<LayoutSidebar
	title="Map Weighting"
	make_title="Team Scorched Map Weighting"
	og_title="Team Scorched Map Weighting"
	og_description="This project aims to provide some empirical data into map weighting in Team Scorched."
>
	<div class="-mt-10">
		<MarkdownWrapper>
			<MapDistributionMd />
		</MarkdownWrapper>
	</div>
	<div id="science-graph-1">
		<h2 class="text-gray-900 dark:text-gray-100 text-xl mb-2 mt-2 flex justify-center">
			The map draw chances per season
		</h2>
		<span class="text-gray-700 dark:text-gray-300 mb-2 flex justify-center"
			> (as of {
				new Date(metadata.last_entry_date * 1000).toLocaleString(undefined, {
					year: "numeric",
					month: "long",
					day: "numeric",
				})
			})
		</span>
		<MapDistribution client:only />
	</div>
</LayoutSidebar>
