---
import { getEntry, render } from "astro:content";
import { Image } from "astro:assets";
import TooltipSimple from "../components/TooltipSimple.astro";
import PopUp from "../components/PopUp.astro";
import MarkdownWrapper from "./MarkdownWrapper.astro";
import crucibleLogo from "../../public/images/crucible_logo.webp";

const entry = await getEntry("pages", "discord");
const { Content } = await render(entry);
