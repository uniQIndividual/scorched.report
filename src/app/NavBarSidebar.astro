---
import { Image } from "astro:assets";
import ColorModeSwitcher from "../components/ColorModeSwitcher.astro";
import ImgSRLogo from "../assets/scorchedreport-logo.png";
import ImgGdnphotographer from "../assets/external/gdnphotographer.webp";
import ImgMemberReport from "../assets/external/memberReport.webp";
import ImgBrayTech from "../assets/external/brayTech.webp";
import ImgCrucibleReport from "../assets/external/crucibleReport.webp";
import ImgGloryReport from "../assets/external/gloryReport.webp";
import TooltipSimple from "../components/TooltipSimple.astro";
---

<style>
	.topic {
	}
</style>
<nav
	class="fixed z-30 w-full dark:transparent bg-[rgba(50,50,50,1)] lg:bg-[rgba(0,0,0,0)] lg:bg-gradient-to-b lg:from-gray-50 lg:dark:from-gray-900"
>
	<div class="px-3 py-3 lg:px-5 lg:pl-3">
		<div class="flex items-center justify-between">
			<div class="flex items-center justify-start">
				<button
					id="toggleSidebarMobile"
					aria-expanded="true"
					aria-controls="sidebar"
					class="p-2 text-gray-600 rounded lg:hidden hover:text-gray-900 hover:bg-gray-100 focus:bg-gray-100 dark:focus:bg-gray-700 focus:ring-2 focus:ring-gray-100 dark:focus:ring-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
				>
					<svg
						id="toggleSidebarMobileHamburger"
						class="w-6 h-6"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h6a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
						>
						</path>
					</svg>
					<svg
						id="toggleSidebarMobileClose"
						class="hidden w-6 h-6"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
						>
						</path>
					</svg>
				</button>
				<a href="/" class="flex ml-2 md:mr-24">
					<Image
						src={ImgSRLogo}
						loading="eager"
						alt={"Scorched Report Logo"}
						class={"h-10 w-10 lg:h-14 lg:w-14 mr-3 mt-1"}
					/>
					<span
						class="cursor-pointer self-center font-semibold text-2xl whitespace-nowrap text-white lg:text-black lg:dark:text-white"
						>Scorched Report</span
					>
					<span class="text-gray-300 dark:text-gray-300 text-sm font-light"
						>beta</span
					>
				</a>
			</div>

			<div class="flex items-center">
				<button
					type="button"
					data-dropdown-toggle="apps-dropdown"
					data-tooltip-target="tooltip-community-projects"
					aria-label="Other Community Projects"
					class="hidden p-2 text-gray-500 rounded-lg sm:flex hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700"
				>
					<span class="sr-only">Other cool Resources</span>
					<svg
						class="w-6 h-6"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
						>
						</path>
					</svg>
				</button>
				<TooltipSimple
					id="tooltip-community-projects"
					title="Other Community Projects"
				/>
				<!-- Dropdown menu -->
				<div
					class="z-50 hidden max-w-sm my-4 overflow-hidden text-base list-none bg-white divide-y divide-gray-100 rounded shadow-2xl dark:bg-gray-920 dark:divide-gray-600"
